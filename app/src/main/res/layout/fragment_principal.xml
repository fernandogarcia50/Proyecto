<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".fragments.PrincipalFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Busqueda"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

         />
    <EditText
        android:id="@+id/busqueda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre o id"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/accionBusqueda"
/>
    <Button
        android:id="@+id/accionBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/busqueda"
        />
    <TextView
        android:id="@+id/mostrarNombre"
        android:layout_width="0dp"
        android:fontFamily="casual"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:text="NOMBRE"

/>



    <TextView
        android:id="@+id/mostrarTipo"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/mostrarNombre"
        android:text="TIPO"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="125dp"
        android:layout_height="114dp"
        android:src="@drawable/ic_account"
        app:layout_constraintTop_toBottomOf="@id/mostrarTipo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/hp"
        android:fontFamily="casual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HP"
        app:layout_constraintRight_toLeftOf="@id/mostrarHp"
        app:layout_constraintTop_toBottomOf="@id/mostrarTipo"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        />
    <TextView
        android:id="@+id/mostrarHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/mostrarTipo"
        app:layout_constraintLeft_toRightOf="@id/hp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:text="HOLA"
        />
    <TextView
        android:id="@+id/atack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="atack"
        android:fontFamily="casual"
        app:layout_constraintRight_toLeftOf="@id/mostrarAtack"
        app:layout_constraintTop_toBottomOf="@id/hp"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        />
    <TextView
        android:id="@+id/mostrarAtack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLA"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mostrarHp"
        app:layout_constraintLeft_toRightOf="@id/atack"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="casual"
        />
    <TextView
        android:id="@+id/defense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Defense"
        app:layout_constraintRight_toLeftOf="@id/mostrarDefense"
        app:layout_constraintTop_toBottomOf="@id/atack"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        android:fontFamily="casual"
        />
    <TextView
        android:id="@+id/mostrarDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLA"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mostrarAtack"
        app:layout_constraintLeft_toRightOf="@id/defense"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="casual"
        />
   <TextView
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:id="@+id/speed"
       android:text="Speed"
       app:layout_constraintTop_toBottomOf="@id/defense"
       app:layout_constraintLeft_toRightOf="@id/imageView3"
       app:layout_constraintRight_toLeftOf="@id/mostrarSpeed"
       android:fontFamily="casual"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:id="@+id/mostrarSpeed"
        android:text="HOLA"
        app:layout_constraintTop_toBottomOf="@id/mostrarDefense"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/speed"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:id="@+id/weight"
        android:text="Weight"
        app:layout_constraintTop_toBottomOf="@id/speed"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintRight_toLeftOf="@id/mostrarWeight"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mostrarWeight"
        android:text="HOLA"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/mostrarSpeed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weight"
        android:layout_marginRight="10dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="224dp" />
</androidx.constraintlayout.widget.ConstraintLayout>